<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.shapesinandroid.lorenzo.i_am_trying_to_build_an_ftc_field_map.FTCFieldMapView
        android:id="@+id/ftcFieldMapViewID"
        android:layout_width="564dp"
        android:layout_height="564dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.791" />

    <ToggleButton
        android:id="@+id/showRRFieldToggleButtonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ftcFieldMapViewID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/moveRobotSeekbarID"
        android:layout_width="161dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/ftcFieldMapViewID"
        app:layout_constraintEnd_toStartOf="@+id/ftcFieldMapViewID"
        app:layout_constraintStart_toEndOf="@+id/ftcFieldMapViewID"
        app:layout_constraintTop_toBottomOf="@+id/ftcFieldMapViewID"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/programmerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/programmerName"
        app:layout_constraintBottom_toTopOf="@+id/ftcFieldMapViewID"
        app:layout_constraintEnd_toStartOf="@+id/ftcFieldMapViewID"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toEndOf="@+id/ftcFieldMapViewID"
        app:layout_constraintTop_toBottomOf="@+id/ftcFieldMapViewID"
        app:layout_constraintVertical_bias="0.843" />

</android.support.constraint.ConstraintLayout>